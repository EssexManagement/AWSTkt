{
    "compilerOptions": {
        "baseUrl": ".", ////  <——— This is required to use the `paths` option in next line below
        "paths": {
            "@/*": ["./*"],
            "*": ["node_modules/*"]
        },
        "target": "es2020",
        "strict": true,
        "preserveConstEnums": true,
        "noEmit": true,
        "sourceMap": false,
        "module":"CommonJS",
        "moduleResolution":"node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
    },
    "exclude": ["node_modules", "**/*.test.ts"]
}